<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:define-macro="main"
      i18n:domain="fika">

  <head>
    <meta charset="utf-8" />
    <title metal:define-slot="page-title">${context.title|''}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Description" />
  </head>

  <body class="view-${request.view_name or 'default'}">

    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Fika</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/" i18n:translate="">Home</a></li>
            <li><a href="/courses">Courses</a></li>
            <li><a href="/course_modules">Course Modules</a></li>
            <li><a href="/users">Users</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
              <li class="dropdown" tal:condition="view.userid">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img tal:replace="structure view.gravatar_link()" />
                        Profile
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><a href="${request.resource_url(view.profile)}">Profile</a></li>
                      <li><a href="${request.resource_url(view.profile, 'change_password')}">Change password</a></li>
                      <li class="divider"></li>
                      <li><a href="/logout">Logout</a></li>
                    </ul>
              </li>
              <tal:annon condition="not view.userid">
                  <li><a href="/login">Login</a></li>
                  <li><a href="/register">Register</a></li>
              </tal:annon>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <div class="container">
        
        <ol class="breadcrumb">
            <tal:iterate repeat="obj view.breadcrumbs()">
                <li><a href="${request.resource_url(obj)}">${obj.title and obj.title or obj.__name__}</a></li>
            </tal:iterate>
        </ol>
        
      <h1>${context.title}</h1>

    <div class="btn-group" tal:condition="len(view.addable_types) > 0">
      <button type="button" class="btn btn-default dropdown-toggle glyphicon" data-toggle="dropdown">
        <span i18n:translate="">Add</span> <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <tal:iterate repeat="type view.addable_types">
            <li><a href="${request.resource_url(context, 'add', query = {'content_type': type})}">${type}</a></li>
        </tal:iterate>
      </ul>
    </div>

    <a tal:condition="view.show_edit(context)"
       href="${request.resource_url(context, 'edit')}"
       class="btn btn-default glyphicon-edit glyphicon"
       i18n:translate="">Edit</a>
    <a tal:condition="view.show_edit(context) and context != view.root"
       href="${request.resource_url(context, 'delete')}"
       class="btn btn-default glyphicon-remove-circle glyphicon"
       i18n:translate="">Delete</a>

        <metal:content define-slot="content">
        </metal:content>

    </div><!-- container -->

  </body>
</html>
