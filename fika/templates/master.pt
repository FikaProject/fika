<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:define-macro="main">

  <head>
    <meta charset="utf-8" />
    <title metal:define-slot="page-title">${context.title|''}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Description" />
  </head>

  <body class="view-${request.view_name or 'default'}">

    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Fika</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#about">One</a></li>
            <li><a href="#contact">Two</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <div class="container">
      ${context}

        Addable types:
        ${view.addable_types}
        
        <tal:iterate repeat="type view.addable_types">
            <a href="${request.resource_url(context, 'add', query = {'content_type': type})}">${type}</a>
        </tal:iterate>

        <metal:content define-slot="content">
            
        </metal:content>
