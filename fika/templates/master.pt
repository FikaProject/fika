<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:define-macro="main"
      i18n:domain="fika">

    <head>
        <meta charset="utf-8" />
        <title metal:define-slot="page-title">${context.title|''}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="Description" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" /><!--Making sure IE is not in compatibility more, otherwise bootstrap doesn't work.-->
        <metal:head define-slot="head"></metal:head>
    </head>

  <body class="view-${request.view_name or 'default'}" data-ng-app="">

    <nav class="navbar navbar-default navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">${view.main_title}</a>
          <ul class="nav navbar-nav">
            <li><a href="/" title="My courses"><span class="glyphicon glyphicon-home"></span><span class="fika-nav-button-text"> My courses</span></a></li>
            <li><a href="/courses" title="Courses"><span class="glyphicon glyphicon-book"></span><span class="fika-nav-button-text"> Courses</span></a></li>
          </ul>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/course_modules" title="Course Modules"><span class="glyphicon glyphicon-th-large"></span><span class="fika-nav-button-text"> Course Modules</span></a></li>
            <li><a href="/users" title="Users"><span class="glyphicon glyphicon-user"></span><span class="fika-nav-button-text"> Users</span></a></li>
          </ul>
           <ul class="nav navbar-nav navbar-right">
              <li class="dropdown" tal:condition="view.userid">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <img tal:replace="structure view.gravatar_image(view.profile.email)" />
                    ${view.profile.title}
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><a href="${request.resource_url(view.profile)}" title="Profile"><span class="glyphicon glyphicon-user"></span> Profile</a></li>
                  <li><a href="${request.resource_url(view.profile, 'change_password')}" title="Change password"><span class="glyphicon glyphicon-cog"></span> Change password</a></li>
                  <li class="divider"></li>
                  <li><a href="/logout" title="Logout"><span class="glyphicon glyphicon-off"></span> Logout</a></li>
                </ul>
              </li>
              <tal:annon condition="not view.userid">
                  <li><a href="/login">Login</a></li>
                  <li><a href="/register">Register</a></li>
              </tal:annon>
          </ul>
          <div class="col-sm-3">
            <form action="${request.resource_url(view.root,'search')}" id="search" class="navbar-form" role="search" method="get">
                <div class="input-group">
                    <input name="query" type="text" class="form-control" placeholder="Search"
                        i18n:attributes="placeholder" value="${request.GET.get('query', '')}"/>
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default">
                        <span class="glyphicon glyphicon-search"></span>&nbsp;
                        </button>
                    </span>
                </div>
            </form>
            </div>
        </div><!--/.nav-collapse -->
      </div><!-- /.container-->
    </nav>

    <div class="container">
        
        <ol class="breadcrumb">
            <tal:iterate repeat="obj view.breadcrumbs()">
                <li><a href="${request.resource_url(obj)}">${obj.title and obj.title or obj.__name__}</a></li>
            </tal:iterate>
        </ol>
        
    <div tal:replace="structure view.flash_messages.render()">Flash messages, if any</div>

    <div tal:replace="structure view.render_action_bar(context)">Actions</div>

    <h1 metal:define-slot="heading">${context.title}</h1>

        <metal:content define-slot="content">
        </metal:content>

    </div><!-- container -->

  </body>
</html>
