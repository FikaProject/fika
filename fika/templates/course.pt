<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="view.main_macro"
      i18n:domain="fika">
<body>

<div metal:fill-slot="content">
	<div data-ng-app="doCourse">
	<script>
		var app = angular.module("doCourse", []);
		
		
	</script>
	
	<a tal:condition="view.userid and context.uid not in users.get(view.userid, None).get_field_value('courses', ())"
       href="${request.resource_url(context, 'join')}"
       class="btn btn-default glyphicon glyphicon-bookmark"
       i18n:translate="">Join</a>
    <div tal:condition="view.userid and context.uid in users.get(view.userid, None).get_field_value('courses', ())">You are enrolled in this course.&nbsp;&nbsp;<a 
       href="${request.resource_url(context, 'leave',query={'course':context.uid})}"
       class="btn btn-default glyphicon-minus-sign glyphicon"
       i18n:translate="">Leave</a></div>
	
	
	<p ng-init="activesegment=0">You chose <b>{{activesegment}}</b></p>
	<p ng-init="i=0">i= <b>{{i}}</b></p>
	<a ng-click="$event.preventDefault();i=i-1">PREV</a> <a ng-click="$event.preventDefault();i=i+1;">NEXT</a>
    <tal:iterate repeat="obj course_modules">
        <div class="panel panel-default">
            <div class="panel-heading"><a href="${request.resource_url(obj)}" ng-click="$event.preventDefault();activesegment='${repeat.obj.index}';i=0" >${obj.title}</a></div>
            <div class="panel-body" ng-show="activesegment=='${repeat.obj.index}'">
            	<ul>
            	<tal:iterate repeat="segment sorted(obj.values(), key=lambda segment: int(segment.get_field_value('order', ())))">
            		<li>
            			${segment.get_field_value('order', ())} <a href="${request.resource_url(segment)}" ng-click="$event.preventDefault();activesegment='${segment.title}'">${segment.title}</a> (${segment.__class__.__name__})
            			<div ng-show="i==${segment.get_field_value('order', ())}" ><tal:form  replace="structure segment.render(request, segment)" ></tal:form></div>
            		</li>
            	</tal:iterate>
            	</ul>
            </div>
        </div>
    </tal:iterate>
    </div>
</div>

</body>
</html>
