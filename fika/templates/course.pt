<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="view.main_macro"
      i18n:domain="fika">
<body>

<div metal:fill-slot="content">

	<a tal:condition="not view.profile.in_course(context)"
       href="${request.resource_url(context, 'join')}"
       class="btn btn-default glyphicon glyphicon-bookmark"
       i18n:translate="">Join</a>
    <div tal:condition="view.profile.in_course(context)">You are enrolled in this course.&nbsp;&nbsp;<a 
       href="${request.resource_url(context, 'leave')}"
       class="btn btn-default glyphicon-minus-sign glyphicon"
       i18n:translate="">Leave</a></div>
	
    <tal:iterate repeat="obj course_modules">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title"><a data-toggle="collapse" data-parent="#accordion" href="#collapse-${obj.uid}">${obj.title}</a></h4>
            </div>
            
            <div class="panel-body">
                <div class="course_module description">
                    ${obj.get_field_value('description')}
                </div>
                <div id="collapse-${obj.uid}" class="panel-collapse collapse">
                    <tal:iterate repeat="segment obj.values()">
                        <tal:segment replace="structure view.render_segment(segment)">Course Module segment</tal:segment>
                    </tal:iterate>
                </div>
            </div>
        </div>
    </tal:iterate>
</div>

</body>
</html>
