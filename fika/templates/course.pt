<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="view.main_macro"
      i18n:domain="fika">
<body>
<metal:heading  fill-slot="heading">

<div tal:condition="not course_module" class="jumbotron">
  <h1>${context.title}</h1>
  <div tal:content="structure context.get_field_value('description')">Description</div>
  <p>
  	<a tal:condition="not view.profile.in_course(context)"
  		href="${request.resource_url(context, 'join')}"
  		class="btn btn-primary btn-lg glyphicon glyphicon-bookmark" role="button">
      <span i18n:translate="">Enroll</span>
  	</a>
  	<a tal:condition="view.profile.in_course(context)"
  		href="${request.resource_url(context, 'leave')}"
  		class="btn btn-primary btn-lg glyphicon glyphicon-ban-circle" role="button">
      <span i18n:translate="">Leave</span>
  	</a>
  </p>
</div>

<div tal:condition="course_module" class="page-header">
  <h1>${context.title}</h1>
</div>

</metal:heading>

<div metal:fill-slot="content">

    <div tal:condition="not course_module">
    	<span i18n:translate="">In this course:</span>
        <ul>
            <tal:iterate repeat="(num, uid) pages.items()">
                <li tal:condition="num>0">
                    <a href="${'?p=%s' % num}" tal:content="course_modules[uid].title|'NotFound: %s' % uid">Title</a>
                </li>
            </tal:iterate>
        </ul>
    </div>

	<ul class="pagination pagination-lg">
        <li><a href="${previous(page)}">&laquo;</a></li>
        <tal:iterate repeat="(num, uid) pages.items()">
                <li tal:attributes="class num == page and 'active' or ''"><a href="?p=${num}" title="${course_modules[uid].title|''}">${num}</a></li>
        </tal:iterate>
        <li><a href="${next(page)}">&raquo;</a></li>
    </ul>

    <div tal:condition="course_module">
        <h2>${course_module.title}</h2>
    
        <div class="course_module description">
            ${course_module.get_field_value('description')}
        </div>
        <tal:iterate repeat="segment course_module.values()">
        	<div class="panel panel-default">
			    <div class="panel-heading">
			        <!-- <input type="hidden" name="module-segments" value="${context.uid}" />-->
			        <h4 class="panel-title">
			               ${segment.title}
			        </h4>
			    </div>
			    <div class="panel-body">
		        	<div class="course_segment description">
		            	${segment.get_field_value('description')}
		        	</div>
		            
		            <div class="btn-group">
		            <tal:iterate repeat="media_object segment.values()">
		            	<a class="collapser" data-toggle="collapse" data-parent="#accordion" href="#collapse-${media_object.uid}" style="display:inline;">
		            		<button type="button" class="btn btn-default">
		            			<span class="glyphicon glyphicon-${media_object.icon}"></span>
	            			</button>
						</a>
				    </tal:iterate>
		            </div>
		            
		            <tal:iterate repeat="media_object segment.values()">
			            <div id="collapse-${media_object.uid}" class="panel-collapse collapse">
				        	<tal:form  replace="structure media_object.render(request, view)" ></tal:form>
				        	
				        	<a class="collapser" data-toggle="collapse" data-parent="#accordion" href="#collapse-${media_object.uid}">
				                <button type="button" class="btn btn-default">
				                	<span class="glyphicon glyphicon-chevron glyphicon-chevron-up"></span> Collapse
				            	</button>
				            </a>
				        </div>
				    </tal:iterate>
			    </div>
			</div>
        </tal:iterate>
        
        <ul class="pagination pagination-lg">
        <li><a href="${previous(page)}">&laquo;</a></li>
        <tal:iterate repeat="(num, uid) pages.items()">
                <li tal:attributes="class num == page and 'active' or ''"><a href="?p=${num}" title="${course_modules[uid].title|''}">${num}</a></li>
        </tal:iterate>
        <li><a href="${next(page)}">&raquo;</a></li>
    </ul>
    
    </div>
    
    
</div>

</body>
</html>
