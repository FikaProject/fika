<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="view.macro('arche:templates/base_view.pt')"
      i18n:domain="fika">
<body>
<div metal:fill-slot="main-content">

    <div tal:condition="can_create_module|False">
      <div class="pull-right">
        <a class="btn btn-default" href="${request.resource_url(context, 'add', query = {'content_type': 'CourseModule'})}">
          <span class="glyphicon glyphicon-plus"></span> Create new module 
        </a>
      </div>
      
      <p class="clearfix"></p>
    </div>

    <tal:iterate repeat="obj course_modules">
        <div class="panel-group" id="modules-accordion">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href="${request.resource_url(obj)}">${obj.title}</a>
                </div>
                
                <div class="panel-body">
                    <div class="row">
                    	<div class="col-md-8">${obj.description}</div>
                    
                        
                        <div class="col-md-4" tal:condition="courses.module_used_in(obj.uid).__len__() > 0">Used in:
                            <ul>
                            <tal:iterate repeat="course courses.module_used_in(obj.uid)">
                               <li><span class="glyphicon glyphicon-book"></span> <a href="${request.resource_url(course)}">${course.title}</a></li>
                            </tal:iterate>
                            </ul>
                        </div>
                        <div class="col-md-4 text-muted" tal:condition="courses.module_used_in(obj.uid).__len__() == 0">
                            This module is not used in any courses yet.
                        </div>
                    </div>
                    
                </div>
                
            </div>
        </div>
    </tal:iterate>
</div>
</body>
</html>
