<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="view.macro('arche:templates/base_view.pt')"
      i18n:domain="fika">
<body>
<div metal:fill-slot="main-content">
	
	<h1>
        ${course.title}
    </h1>
	<h2>
        ${module_index}. ${context.title}
    </h2>
    <p>
    	${context.description}
	</p>
    
    <p>
	    <div tal:content="structure course_pagination(context, request, view)">
	        (course pagination here)
	    </div>
	</p>
	
    <div class="row">
		<div class="col-md-12">
	        <div class="panel-group" id="accordion">
	        	<form id="sortable-form" tal:omit-tag="not request.has_permission('perm:Edit', context)">
					<span id="sortable" tal:omit-tag="not request.has_permission('perm:Edit', context)">
			        	<tal:iterate repeat="obj module_segments">
							<div class="panel panel-default panel-group-with-overflow">
								<input type="hidden" name="segment_name" value="${obj.__name__}" tal:condition="request.has_permission('perm:Edit', context)" />
								<div class="panel-heading">
									<h4 class="panel-title">
										${obj.title}
										<tal:segmentcontents repeat="segmentcontent obj.values()">
											<button type="button" class="btn btn-default collapser fika-media-button" data-toggle="collapse" data-parent="#accordion-${obj.uid}" href="#collapse-${segmentcontent.uid}">
							                    <span class="glyphicon glyphicon-${getattr(segmentcontent, 'icon', 'file')}"></span>
							    			</button>
										</tal:segmentcontents>
										<div class="btn-group btn-group-sm" tal:condition="request.has_permission('perm:Edit', context)" >
											<button type="button" class="btn btn-default dropdown-toggle btn-add" data-toggle="dropdown">
												<span class="text-muted">
													<span class="glyphicon glyphicon-plus"></span> <span class="caret"></span>
												</span>
											</button>
											<ul class="dropdown-menu" role="menu">
												<li tal:repeat="(addable_type,icon) addable_types.items()">
													<a href="${request.resource_url(obj, 'add', query = {'content_type': addable_type})}">
														<span class="glyphicon glyphicon-${icon}"></span> ${addable_type.title()}
													</a>
												</li>
											</ul>
										</div>
									</h4>
								</div>
								<div id="segment-${obj.uid}" class="panel-body" >
			                        Loading...
			                        <script type="text/javascript">
			                            $('#segment-${obj.uid}').load('${request.resource_url(obj)}');
			                        </script>
								</div>
							</div>
						</tal:iterate>
					</span>
				</form>
				<div class="panel panel-default panel-add" tal:condition="request.has_permission('perm:Edit', context)">
					<div class="panel-body">
						<a href="${request.resource_url(context, 'add', query = {'content_type': 'Segment'})}">
							<span class="text-muted">
								<span class="glyphicon glyphicon-plus"></span> Add new segment
							</span>
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
    
    <p>&nbsp;</p>
    <div tal:condition="in_course" tal:content="structure course_module_toggle(context)">
        (course module button here)
    </div>
    
    <p>
		<div tal:content="structure course_pagination(context, request, view)">
		    (course pagination here)
		</div>
    </p>
    
    <p>
	    <div class="well well-sm">
	        <span i18n:translate="">Created</span>
	        <span tal:condition="getattr(context, 'created', None)"
	            title="${request.dt_handler.format_dt(context.created)}">
	            ${request.dt_handler.format_relative(context.created)}
	        </span>
	        |
	        <span i18n:translate="">Modified</span>
	        <span tal:condition="getattr(context, 'modified', None)"
	            title="${request.dt_handler.format_dt(context.modified)}">
	            ${request.dt_handler.format_relative(context.modified)}
	        </span>
		</div>
	</p>
	
	<script>
		$(function()
		{
			$( "#sortable" ).sortable({
				stop: function( event, ui ) {
					$.post("${request.resource_url(context, 'sorted')}", $( "#sortable-form" ).serialize());
				}
			});
			$( "#sortable" ).disableSelection();
		});
	</script>
</div>
</body>
</html>
