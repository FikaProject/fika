<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="view.main_macro"
      i18n:domain="fika">
<body>

<metal:head fill-slot="head">
	<script type="text/javascript">
		$(document).ready(function(){
			$('#module-segments').sortable();
		});
	</script>
</metal:head>

<div metal:fill-slot="content">

	<form tal:condition="request.view_name=='edit'" tal:replace="structure form">Form here</form>
	<form tal:condition="request.view_name=='order'" tal:replace="structure form">Form here</form>

	<div tal:omit-tag="request.view_name!='order'" id="module-segments">	
    
    <tal:iterate repeat="segment context.values()">
        	<div class="panel panel-default">
			    <div class="panel-heading">
			        <!-- <input type="hidden" name="module-segments" value="${context.uid}" />-->
			        <a href="${request.resource_url(segment)}">
			        <h4 class="panel-title">
			               ${segment.title}
			        </h4>
			        </a>
			    </div>
			    <div class="panel-body">
		        	<div class="course_segment description">
		            	${segment.get_field_value('description')}
		        	</div>
		            
		            <div class="btn-group">
			            <tal:iterate repeat="media_object segment.values()">
			            	<a class="collapser fika-media-button" data-toggle="collapse" data-parent="#accordion" href="#collapse-${media_object.uid}">
			            		<button type="button" class="btn btn-default">
			            			<span class="glyphicon glyphicon-${media_object.icon}"></span>
		            			</button>
							</a>
					    </tal:iterate>
		            </div>
		            
		            <tal:iterate repeat="media_object segment.values()">
			            <div id="collapse-${media_object.uid}" class="panel-collapse collapse">
				        	<tal:form  replace="structure media_object.render(request, view)" ></tal:form>
				        </div>
				    </tal:iterate>
			    </div>
			</div>
        </tal:iterate>
    
   </div>
    
    <span tal:condition="request.view_name=='edit'">
	    <div class="btn-group" tal:condition="len(view.addable_types) > 0">
	      <button type="button" class="btn btn-default dropdown-toggle glyphicon glyphicon-plus" data-toggle="dropdown">
	        <span i18n:translate="">Add</span> <span class="caret"></span>
	      </button>
	      <ul class="dropdown-menu" role="menu">
	        <tal:iterate repeat="type view.addable_types">
	            <li><a href="${request.resource_url(context, 'add', query = {'content_type': type})}">${type}</a></li>
	        </tal:iterate>
	      </ul>
	    </div>
    </span>

	<div>
	    Used in courses:
	    <ul>
		    <tal:iterate repeat="obj used_in_courses">
		        <li><a href="${request.resource_url(obj)}" alt="${obj.get_field_value('description')}" title="${obj.get_field_value('description')}">${obj.title}</a></li>
		    </tal:iterate>
		</ul>
		Created: ${context.created} <br />
        Modified: ${context.modified} <br />
	</div>
	
</div>


</body>
</html>
