<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="view.main_macro"
      i18n:domain="fika">
<body>

<metal:head fill-slot="head">
	<script type="text/javascript">
		$(document).ready(function(){
			$('#module-segments').sortable();
		});
	</script>
</metal:head>

<div metal:fill-slot="content">

	<form tal:condition="request.view_name=='edit'" tal:replace="structure form">Form here</form>

	<div tal:omit-tag="request.view_name!='edit'" id="module-segments">	
    <tal:iterate repeat="obj context.values()">
        <tal:segment replace="structure view.render_segment(obj)">Course Module segment</tal:segment>
    </tal:iterate>
   </div>
    
    <span tal:condition="request.view_name=='edit'">
	    <div class="btn-group" tal:condition="len(view.addable_types) > 0">
	      <button type="button" class="btn btn-default dropdown-toggle glyphicon glyphicon-plus" data-toggle="dropdown">
	        <span i18n:translate="">Add</span> <span class="caret"></span>
	      </button>
	      <ul class="dropdown-menu" role="menu">
	        <tal:iterate repeat="type view.addable_types">
	            <li><a href="${request.resource_url(context, 'add', query = {'content_type': type})}">${type}</a></li>
	        </tal:iterate>
	      </ul>
	    </div>
    </span>

	<div>
	    Used in courses:
	    <ul>
		    <tal:iterate repeat="obj used_in_courses">
		        <li><a href="${request.resource_url(obj)}" alt="${obj.get_field_value('description')}" title="${obj.get_field_value('description')}">${obj.title}</a></li>
		    </tal:iterate>
		</ul>
		Created: ${context.created} <br />
        Modified: ${context.modified} <br />
	</div>
	
</div>


</body>
</html>
